<%= render "devise/layout" do %>
  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "auth-form" }) do |f| %>
    <%= hidden_field_tag :job, params[:job] if params[:job] %>
    <%= hidden_field_tag :remember_me, true if devise_mapping.rememberable? %>
    <!-- .form-group -->
    <div class="form-group">
      <div class="form-label-group">
        <%= f.text_field :email, required: true, class: "form-control", autocomplete: "email" %> <label for="user_email">Email</label>
      </div>
    </div><!-- /.form-group -->
    <!-- .form-group -->
    <div class="form-group">
      <div class="form-label-group">
        <%= f.password_field :password, required: true, class: "form-control", autocomplete: "current-password" %>
        <label for="user_password">Password</label>
      </div>
    </div><!-- /.form-group -->
    <!-- .form-group -->
    <div class="form-group">
      <button class="btn btn-lg btn-primary btn-block" type="submit">Sign In</button>
    </div><!-- /.form-group -->
    <!-- .form-group -->
    <div class="form-group text-center">
      <div class="custom-control custom-control-inline custom-checkbox">
        <%= f.check_box :remember_me, class: "custom-control-input" %>
        <label class="custom-control-label" for="user_remember_me">Keep me signed in</label>
      </div>
    </div><!-- /.form-group -->
    <!-- recovery links -->
    <div class="text-center pt-3">
      <%= render "devise/links" %>
    </div><!-- /recovery links -->
  <% end %><!-- /.auth-form -->
<% end %>
