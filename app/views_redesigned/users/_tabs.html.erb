<div class="flex-grow-1">
  <%= nav_tabs do %>
    <%= nav_item_link(name: "Details", path: user_path(user), active: :exact) %>
    <%= nav_item_link(name: "Organizations", path: user_organizations_path(user)) %>
    <% if authorized_user.can_admin_system? %>
      <%= nav_item_link(name: "Properties", path: user_properties_path(user)) %>
      <%= nav_item_link(name: "Campaigns", path: user_campaigns_path(user)) %>
      <%= nav_item_link(name: "Comments", path: user_comments_path(user)) %>
      <%= nav_item_link(name: "Events", path: user_events_path(user)) %>
      <%= nav_item_link(name: "Revisions", path: user_versions_path(user)) %>
    <% end %>
  <% end %>
</div>
