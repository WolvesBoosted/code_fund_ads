<%= table_row add_class: ("class=border-bottom" if daily_summary.displayed_at_date.saturday?) do %>
  <%= table_data_value daily_summary.displayed_at_date.to_s("abdy"), add_class: "no-wrap" %>
  <% if @campaign.standard? %>
    <%= table_data_value daily_summary.gross_revenue.format %>
    <%= table_data_value number_with_delimiter(daily_summary.impressions_count) %>
  <% end %>
  <%= table_data_value number_with_delimiter(daily_summary.clicks_count) %>
  <% if @campaign.standard? %>
    <%= table_data_value number_to_percentage(daily_summary.click_rate, precision: 2) %>
    <%= table_data_value(daily_summary.cpm.format) %>
    <%= table_data_value(daily_summary.cpc.format) %>
  <% end %>
<% end %>
