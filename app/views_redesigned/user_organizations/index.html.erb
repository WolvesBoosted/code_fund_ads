<%= render layout: "/users/layout", locals: { user: @user } do %>
  <% if @organizations_as_owner.present? %>
    <%= render "/user_organizations/list", list_header: "Owner", organizations: @organizations_as_owner %>
  <% end %>

  <% if @organizations_as_administrator.present? %>
    <%= render "/user_organizations/list", list_header: "Administrator", organizations: @organizations_as_administrator %>
  <% end %>

  <% if @organizations_as_member.present? %>
    <%= render "/user_organizations/list", list_header: "Member", organizations: @organizations_as_member %>
  <% end %>
<% end %>
