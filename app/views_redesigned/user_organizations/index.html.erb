<%= render layout: "/user/layout", locals: { user: @user } do %>
  <%= card do %>
    <%= card_header add_class: "d-flex justify-content-between" do %>
      <div class="d-flex flex-column">
        <%= card_title do %>
          Organizations
        <% end %>
        <%= card_subtitle do %>
          Organizations that you are a member of
        <% end %>
      </div>
    <% end %>
    <%= card_body do %>
      <%= render "/user_organizations/table", user: @user, user_organizations: @user_organizations, pagy: @pagy %>
    <% end %>
  <% end %>
<% end %>
