<aside class="app-aside app-aside-expand-md app-aside-light" data-controller="sidebar">
  <div class="aside-content">
    <div class="aside-menu overflow-hidden">
      <nav id="stacked-menu" class="stacked-menu">
        <ul class="menu">
          <li class="menu-item">
            <div class="px-3 mb-2">
              <%= select_tag "team",
                options_from_collection_for_select(current_user&.organizations, "id", "name", session[:organization_id]),
                class: "form-control custom-select",
                data: {
                  reflex: "change->TeamReflex#change"
                } %>
            </div>
          </li>
          <li class="menu-item">
            <%= render "/shared/date_range_picker" %>
          </li>
          <% if authorized_user.can_advertise_and_publish? %>
            <%= render "/shared/sidebar_content/advertisers_publishers" %>
          <% elsif authorized_user.can_advertise? %>
            <%= render "/shared/sidebar_content/advertisers" %>
          <% elsif authorized_user.can_publish? %>
            <%= render "/shared/sidebar_content/publishers" %>
          <% end %>
          <% if authorized_user.can_admin_system? %>
            <%= render "/shared/sidebar_content/administrators" %>
          <% end %>
        </ul>
      </nav>
    </div>
  </div>
</aside>
